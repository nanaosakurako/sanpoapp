<div class="main area-show">
  <div class="container">
    <div class="area">
      <%= @area.name %>
      <% @area.posts.each do |post| %>
        <div class="posts-index-item">
        <div class="post-left">
          <img src="<%= "/user_images/#{post.user.picture_name}" %>">
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to(post.user.name, "/users/#{post.user.id}") %>
          </div>
          <%= link_to(post.content, "/posts/#{post.id}") %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>